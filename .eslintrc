{
  "parser": "babel-eslint",
  "extends": "leankit",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "react/jsx-no-bind": 0,
    "comma-dangle": 0,
    "no-use-before-define": 0,
    "consistent-return": 0,
    "no-empty-label": 0,
    "space-before-keywords": 0,
    "space-after-keywords": 0,
    "space-return-throw-case": 0,
    "no-mixed-spaces-and-tabs": 0,
    "keyword-spacing": 2,
    "indent": [ "error", 2 ]
  },
  "plugins": [
    "react"
  ]
}
